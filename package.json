{
  "name": "express-workshop",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.json && npm run copy-assets && npm run copy-views",
    "clean": "rm -Rf dist",
    "copy-assets": "cp -R src/assets dist",
    "copy-views": "cp -R src/views dist",
    "start": "ts-node ./src/index.ts",
    "start:dist": "node ./dist/index.js",
    "start:hot": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruettenm/express-wokshop.git"
  },
