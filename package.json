    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.1",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.2",
